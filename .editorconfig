# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
max_line_length = 100

[*.json]
indent_size = 2
insert_final_newline = ignore

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
